{
	"name": "svelte-extension",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build:ui": "vite build",
		"build": "yarn build:ui && npx webpack --config webpack.config.cjs",
		"buildw": "yarn build --watch",
		"build:css": "npx tailwindcss -i ./src/app.css -o ./build/output.css --watch",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"devDependencies": {
		"@babel/core": "^7.22.9",
		"@babel/preset-env": "^7.22.9",
		"@babel/preset-typescript": "^7.22.5",
		"@crxjs/vite-plugin": "^1.0.14",
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/kit": "^1.20.4",
		"@types/webextension-polyfill": "^0.10.1",
		"@typescript-eslint/eslint-plugin": "^5.45.0",
		"@typescript-eslint/parser": "^5.45.0",
		"autoprefixer": "^10.4.14",
		"babel-loader": "^9.1.3",
		"copy-webpack-plugin": "^11.0.0",
		"daisyui": "^3.2.1",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte": "^2.30.0",
		"postcss": "^8.4.25",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.10.1",
		"svelte": "^4.0.0",
		"svelte-check": "^3.4.3",
		"sveltekit-adapter-chrome-extension": "^2.0.0",
		"tailwindcss": "^3.3.2",
		"ts-loader": "^9.4.4",
		"tslib": "^2.4.1",
		"typescript": "^5.1.6",
		"vite": "^4.3.6",
		"webextension-polyfill": "^0.10.0",
		"webpack": "^5.88.1",
		"webpack-cli": "^5.1.4"
	},
	"type": "module",
	"dependencies": {
		"@esbuild-plugins/node-globals-polyfill": "^0.2.3",
		"@esbuild-plugins/node-modules-polyfill": "^0.2.2",
		"@fortawesome/free-brands-svg-icons": "^6.4.0",
		"@fortawesome/free-solid-svg-icons": "^6.4.0",
		"@iota/validators": "^1.0.0-beta.30",
		"@macfja/svelte-persistent-store": "^2.3.1",
		"@rollup/plugin-inject": "^5.0.3",
		"@sveltejs/adapter-static": "^2.0.2",
		"buffer": "^6.0.3",
		"node-stdlib-browser": "^1.2.0",
		"svelte-fa": "^3.0.4",
		"trezor-address-validator": "^0.4.3",
		"vite-plugin-node-polyfills": "^0.9.0",
		"vite-plugin-node-stdlib-browser": "^0.2.1"
	}
}